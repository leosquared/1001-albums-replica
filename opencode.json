{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/glm-4.7-free",
  "default_agent": "build",
  "permission": {
    "*": "allow",

    "doom_loop": "allow",
    "external_directory": "deny",

    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },

    "bash": {
      "*": "allow",
      "rm *": "deny"
    }
  }
}
